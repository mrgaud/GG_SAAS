<div class="row">
  <% if params[:plan]=='2' %>
    <div class='col-md-6 col-md-offset-3 text-center'>
      <h1>Pro Account</h1>
    </div>
  <% else %> 
    <div class='col-md-6 col-md-offset-3 text-center'>
      <h1>Basic Account</h1>
    </div>
  <% end %>
  
  <div class='col-md-6 col-md-offset-3 text-center'>
    <div class = "well">
      <h2>Sign up</h2>
      
      <% if params[:plan] == "2" %>
        <%= render "pro_form" %>
      <% else %>
        <%= render "basic_form" %>
      <% end %>
      
      <%= render "devise/shared/links" %>
      
      </div>
    </div>
  </div>
</div>

